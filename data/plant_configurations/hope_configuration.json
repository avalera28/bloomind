{
    "name": "nombre de planta",
    "number_plants": 3,
    "min_separation": 100,
    "global": {
        "components": ["root", "background", "seed", "soil"],
        "grow_duration": 3,
        "grow_delay": 0
    },
    "plants": [
        {
            "source": "./assets/images/Hope/SVG/hope_plant_100x100-1-4.svg",
            "scale": 2.5,
            "offset": {"x": 0, "y": 0},
            "components": {
                "stem": {
                    "grow_duration": 3,
                    "grow_delay": 0
                },
                "leaf": {
                    "grow_duration": 2,
                    "grow_delay": 1,
                    "animation_strategy": "scale",
                    "origin": {
                        "x_percent": 50,
                        "y_percent": 50
                    }
                },
                "flower": {
                    "grow_duration": 1,
                    "grow_delay": 2,
                    "animation_strategy": "scale",
                    "origin": {
                        "x_percent": 50,
                        "y_percent": 100
                    }
                }
            }
        }
    ]
}